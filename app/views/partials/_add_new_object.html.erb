<!-- Add a button for new instances of object -->
<% if model_name == "pay_grade" && current_user.role?(:admin) %>
  <%= link_to(eval("new_#{model_name}_path"), class: "waves-effect waves-light btn") do %>
    <strong>Add a New <%= model_name.capitalize %></strong>
  <% end %>

<% elsif model_name == "pay_grade_rate" && current_user.role?(:admin) %>
  <%= link_to(eval("new_#{model_name}_path"), class: "waves-effect waves-light btn") do %>
      <strong>Add a New <%= model_name.capitalize %></strong>
    <% end %>
<% elsif can? :new, eval(model_name.capitalize) %>
  <%= link_to(eval("new_#{model_name}_path"), class: "waves-effect waves-light btn") do %>
    <strong>Add a New <%= model_name.capitalize %></strong>
  <% end %>
<% end %>