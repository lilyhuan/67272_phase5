
<div id="form-template">
<h5>New Shift Job</h5>
<!-- create an empty shift job object to work with -->
<% @shift_job = ShiftJob.new %>
<!-- now the form template itself -->
<div class="row">
  <div class="col">
    <%= simple_form_for(@shift_job) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
            <%= f.input :job_id, collection: Job.alphabetical.to_a, include_blank: true %>
            <%= f.input :shift_id, as: :hidden, input_html: { value: @shift.id } %>
        
        </div>
      </div>
      <div class="row">
        <div class="form-actions col">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>