
<div class="row">
<div class="col s8">
  <h4>New Pay Rate:</h4>
  <%= simple_form_for(@pay_grade_rate) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :pay_grade_id, collection: PayGrade.alphabetical.active.to_a, include_blank: true %>
        <%= f.input :rate,  label_html: { class: 'active' } %>
        <%= f.input :start_date,  label_html: { class: 'active' } %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>

</div>