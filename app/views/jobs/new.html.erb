
<div class="row">
<div class="col s8">
  <h4>New Job:</h4>
  <%= simple_form_for(@job) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description,  label_html: { class: 'active' } %>
        <%= f.input :active,  label_html: { class: 'active' } %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>

</div>