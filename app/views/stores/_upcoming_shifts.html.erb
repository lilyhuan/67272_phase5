<div class="card">
  <div class="card-content">
    <p>
      <h4>
        Missed Shifts
      </h4>
    </p>

    <% if @missed_shifts.empty? %>
      <p>There are no missing shifts at this time.</p>
    <% else %>

      <table class="striped highlight">
        <thead>
          <th>Date</th>
          <th>Employee</th>
          <th>Starting</th>
          <th>Options</th>
        </thead>
        <% @missed_shifts.each do |shift| %>
          <tr %>
            <td><%= link_to shift.date.strftime("%-m/%-d"), shift_path(shift) %></td>
            <td><%= link_to shift.employee.name, employee_path(shift.employee) %></td>
            
            <td><%= shift.start_time.strftime("%l:%M %P") %></td>

            <td>
              <%= link_to edit_shift_path(shift) do %>
                <i class="material-icons">edit</i>
              <% end %>
            

            <%= link_to(shift_path(shift), method: :delete, data: { confirm: 'Are you sure you wish to delete this shift?' }) do %>
                <i class="material-icons">delete</i>
            <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />

      <%= will_paginate @missed_shifts, previous_label: "Previous&nbsp;", param_name: "mpage", next_label: "&nbsp;Next" %>
    <% end %>


  </div>
</div>

