
<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"><%= 'New Assignment' %></span>
        <%= simple_form_for(@assignment) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
            <%= f.input :employee_id, collection: Employee.alphabetical.active.to_a, include_blank: true %>
            <%= f.input :store_id, collection: Store.alphabetical.active.to_a, include_blank: true %>
            <%= f.input :start_date, label_html: { class: 'active' } %>
            <%= f.input :pay_grade_id, collection: PayGrade.alphabetical.active.to_a, include_blank: true %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', :back %>