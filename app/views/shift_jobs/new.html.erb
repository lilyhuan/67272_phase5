
<div class="row">
<div class="col s8">
  <h4>New Shift Job:</h4>
  <%= simple_form_for(@shift_job) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :job_id, collection: Job.alphabetical.to_a, include_blank: true %>
        <%= f.input :shift_id, as: :hidden, input_html: { value: @shift.id } %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
<div class="col s4">
  <h4>For Shift:</h4>
  <h5>Date: <%= @shift.date.strftime("%B %d, %Y") %></h5>
  <h5>Employee: <%= @employee.name %></h5>
</div>
</div>